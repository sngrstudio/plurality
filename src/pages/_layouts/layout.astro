---
import BaseLayout, { type Props as BaseLayoutProps } from "./base.astro";
import SEO, { type Props as SEOProps } from "./seo.astro";

export interface Props extends BaseLayoutProps, SEOProps {}

const { title, description, ...props } = Astro.props
---

<BaseLayout {...props}>
    {/* body */}
	<slot />

    {/* head */}
    <Fragment slot="head">
        <SEO title={title} description={description} />
        <slot name="head" />
    </Fragment>
</BaseLayout>